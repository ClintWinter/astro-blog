---
interface Frontmatter {
    title: string;
    description?: string;
    author?: string;
    publishedAt?: string;
    createdAt?: string;
    updatedAt?: string;
}

import MainLayout from "../layouts/MainLayout.astro";
import { Content as HeroCode } from '../components/HeroCode.md';

const posts = (await Astro.glob<Frontmatter>('./blog/*.md'))
    .filter((post) => post.frontmatter.publishedAt)
    .sort((a, b) => new Date(b.frontmatter.publishedAt!).getTime() - new Date(a.frontmatter.publishedAt!).getTime())
    .slice(0, 5);
---

<MainLayout title="Clint Winter">
    <main class="container mx-auto p-4 rounded-sm">
        <section class="mb-16">
            <h1 class="text-5xl font-bold dark:text-nord-s-100 mb-6">Hi, I'm Clint Winter ðŸ‘‹</h1>
            <HeroCode />
        </section>

        <section>
            <h2 class="mb-6 font-bold text-3xl dark:text-nord-s-100">Latest Posts</h2>
            <ul>
            {posts.map((post) => (
                <li class="mb-6 text-xl">
                    <a class="font-semibold text-nord-a-green dark:text-nord-a-yellow hover:underline" href={post.url}>
                        {post.frontmatter.title}
                    </a>
                    <p class="text-nord-a-300 opacity-70 text-sm">
                        {new Date(post.frontmatter?.publishedAt).toLocaleDateString()}
                    </p>
                </li>
            ))}
            </ul>
        </section>
    </main>
</MainLayout>

<style>
:global(pre) {
    @apply p-2 text-lg md:text-xl bg-nord-s-300 rounded;
}

:global(pre .line-number) {
    @apply mr-1;
}
</style>
