---
import MainLayout from "./MainLayout.astro";
import '@fontsource/jetbrains-mono/variable.css';
const { frontmatter } = Astro.props;
---

<MainLayout title={`Clint Winter | ${frontmatter.title}`}>
    <main class="max-w-prose mx-auto px-2 text-nord-n-600 dark:text-nord-s-300">
        <h1 class="text-3xl font-bold">{frontmatter.title}</h1>
        <p class="mb-8">{new Date(frontmatter.publishedAt).toDateString()}</p>

        <article class="post-container">
            <slot />
        </article>
    </main>
</MainLayout>

<style>
.post-container {
    @apply text-lg;
}

.post-container > :global(*) {
    @apply mb-4;
}

.post-container :global(a) {
    @apply text-nord-a-green font-semibold underline;
}

:global(.dark) .post-container :global(a) {
    @apply text-nord-a-yellow font-semibold underline;
}

.post-container :global(h1) {
    @apply text-3xl font-bold leading-none pt-6;
}

.post-container :global(pre) {
    @apply p-4 rounded overflow-x-auto;
}

.post-container :global(pre .line-number) {
    @apply mr-2;
}

.post-container :global(:not(pre) code) {
    @apply bg-nord-s-300 text-nord-f-slate p-1 rounded;
}

:global(.dark) .post-container :global(:not(pre) code) {
    @apply bg-nord-n-900 text-nord-f-teal p-1 rounded;
}
</style>
